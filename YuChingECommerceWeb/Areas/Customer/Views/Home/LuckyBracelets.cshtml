@model IEnumerable<Product>

<div class="container">
    <h2>Your Zodiac Sign: @ViewData["ZodiacSign"]</h2>
    <h4>Your Lucky Color: @ViewData["LuckyColor"]</h4>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <img src="@product.ProductImages?.FirstOrDefault()?.ImageUrl ?? 'https://placehold.co/500x500'" class="card-img-top" alt="@product.Title">
                    <div class="card-body">
                        <h5 class="card-title">@product.Title</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="text-muted">Color: @product.Color</p>
                        <a href="/Customer/Home/Details?productId=@product.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
